sub parsecurcalls() {
	while ($str=<>)
	{
		$stringNumber++;
		if ($str =~ /\s(.{5}) (.{5}) (.{3}) (.{3}) (.{8}) (.{5}) (.{8}) (.{5})(.{2}) (.{6}) (.{26}) (.{1}) (.{5}) (.{10}) (.{16}) (.{16}).*$/){
			unitecurcalls();
		}else{
			if ($vars{nowrlog} =~ /yes/i){
				if ($str !~ /^$/){
					print $str;
				};
			};
		};
	};
};

sub unitecurcalls() {
	$initial_user=$1;
	$charged_user=$2;
	$type=$3;
	$line=$4;
	$date=$5;
	$time=$6;
	$call_duration=$7;
	$taxes=$8;
	$serv=$9;
	$facilities=$10;
	$dialed_number=$11;
	$mode=$12;
	$ringing=$13;
	$cost=$14;
	$business_code=$15;
	$subscriber_name=$16;
	
	
	# mandatory fields
	
	#$TimeOfCall+
	#$Forwarded+
	#$Internally+
	#$CO+
	#$Way+
	#$Number+
	#$Duration+
	
	# bonus
	#$Code+
	
	$co=substr($line,1,2)+10;
	if ($dialed_number=~/(\d+)/) 
	{
		$number=$1;
	}
	else {
		$number=0;
	}
	
	if($type =~ /<--/){
		$way='1';
	}else{
