	};
	
	if ($date=~(/(\d{2})\/(\d{2})\/(\d{2})/)) {
		$Month=$2;
		$Day=$1;
		$Year=$3+2000;
		$timeofcall = "$Year-$Month-$Day $time:00";
	}
	
	$internally=substr($charged_user,1);
	
	if ($call_duration=~(/(\d{2}):(\d{2}):(\d{2})/)) {
		$duration = (($1*60*60)+($2*60)+$3);
	}
	
	if($facilities=~/N|X/){
		$forwarded=1;
	}
	else {
		$forwarded =0;
	}
	
	if($business_code=~/(\d+)/){
		$code=$1;
	}
