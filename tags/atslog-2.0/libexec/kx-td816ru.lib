sub parsecurcalls() {
    while ($str=<>)
    {
        $stringnumber++;
        if ($str =~ /^.*?(\d+)\/\s??(\d+)\/\s??(\d+)\s+(\d+)\:(\d+)([A|P]M)\s+(\d+)\s+(\d+)\s+(.*?)\s+(\d+)\:(\d+)\'(\d+).+$/){
	    unitecurcalls();
        }else{
	    #print("$stringnumber\n");
	    if ($vars{debug} =~ /yes/i){
		if ($str !~ /^\s*$/){
		    print $str;
		};
	    };
        };
    };
};

