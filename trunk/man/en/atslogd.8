\fB
.SH SYNOPSIS
.nf
.fam C

\fBatslogd\fP [-D \fIdir\fP] [-L \fIlogfile\fP] [-F \fIfilename\fP] [-s \fIspeed\fP] [-c \fIcsize\fP] [-p \fIparity\fP] [-f \fIsbits\fP] [-d] [-e] [-o]
[-n] [-x \fInumber\fP] [-w \fIseconds\fP] [-b] [-P \fIpidfile\fP] tcp[:address]:port|rtcp:address:port|dev
.fam T
.fi
