sub parsecurcalls() {
	while ($str=<>)
	{
		$stringNumber++;
		# regexp
		if ($str =~ /(\d{2}\/\d{2}\/\d{2}) (.{2}:\d{2}.{2})   (\d{3}) (\d{2}) (.{30}) (\d{2}:\d{2}\'\d{2}) (.{10}) (.{2}) (\r)?$/){
			unitecurcalls();
		}else{
			if ($vars{nowrlog} =~ /yes/i){
				if ($str !~ /^$/){
					print $str;
				};
			};
		};
	};
};

