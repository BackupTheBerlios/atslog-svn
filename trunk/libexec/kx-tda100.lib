sub parsecurcalls() {
	while ($str=<>)
	{
		$stringNumber++;
		# regexp
		if ($str =~ /(.{2}\/.{2}\/.{2}) (\d{2}:\d{2}) (.{6}) (\d{2}) (.{20}) (\d{2}:\d{2}'\d{2})  (.{9}) (.{10}) (.{2}) (\r)?$/){
			unitecurcalls();
		}else{
			if ($vars{nowrlog} =~ /yes/i){
				if ($str !~ /^$/){
					print $str;
				};
			};
		};
	};
};

