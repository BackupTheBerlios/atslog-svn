#!/bin/sh
# ATSlog version @version@ build @buildnumber@ www.atslog.dp.ua  
# Copyright (C) 2003 Denis CyxoB www.yamiyam.dp.ua
#                                                       
# Скрипт ежедневного вызова сбора информации из       
# текстового лог-файла и записи её в базу SQL сервера.

PATH=/sbin:/usr/sbin:/bin:/usr/bin:/usr/local/sbin:/usr/local/bin:.

# Readin config file                              
if [ -r /usr/local/etc/atslog.conf ]; then
    . /usr/local/etc/atslog.conf
# Переменная $LANG - берётся из настройки локали.
    if [ -f $sharedir/$langdir/$LANG ]; then
	. $sharedir/$langdir/$LANG
    elif [ -f $sharedir/$langdir/en_US ]; then
	. $sharedir/$langdir/en_US
    else
	echo "Can't open language file"
	exit 1
    fi
else
    echo "Can't open config file"
    exit 1
fi                                                

# Установим рабочие переменные
PATH=$PATH:$bindir:$sharedir

# Будем производить действия только в том случае, если не активирована
# функция "прямая запись с порта АТС в базу данных".
# Смотрите параметр $fastwrite в конфигурационном файле.
case "$fastwrite" in
    [Yy][Ee][Ss])
	echo ""
	echo $msg10
    ;;
    *)
	$bindir/$masterscript writedb
    ;;
esac
